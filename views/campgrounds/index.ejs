<% layout('/layouts/boilerplate') %> 
    <h1>Campgrounds</h1>
    <a href="/campgrounds/new">New</a><br>
    <% for(camp of campgrounds){ %> 
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=camp.image%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/campgrounds/<%= camp.id %> "><%= camp.title %></a>
                        </h5>
                        <p class="card-text">
                            <%= camp.description  %> 
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location  %> 
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= camp.id %> ">View <%= camp.title %></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %> 
